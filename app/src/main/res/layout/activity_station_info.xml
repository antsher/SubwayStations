<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical">

        <com.stazis.subwaystations.presentation.views.common.TextViewWithFont
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:freezesText="true"
            android:textSize="24sp"
            app:typeface="Montserrat-SemiBold" />

        <com.stazis.subwaystations.presentation.views.common.TextViewWithFont
            android:id="@+id/latitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:freezesText="true"
            android:textSize="16sp"
            app:typeface="Montserrat-Regular" />

        <com.stazis.subwaystations.presentation.views.common.TextViewWithFont
            android:id="@+id/longitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:freezesText="true"
            android:textSize="16sp"
            app:typeface="Montserrat-Regular" />

        <com.stazis.subwaystations.presentation.views.common.TextViewWithFont
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:freezesText="true"
            android:textSize="24sp"
            app:typeface="Montserrat-Medium" />

        <com.stazis.subwaystations.presentation.views.common.TextViewWithFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:freezesText="true"
            android:text="@string/description"
            android:textSize="20sp"
            app:typeface="Montserrat-SemiBold" />

        <com.stazis.subwaystations.presentation.views.common.EditableTextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>